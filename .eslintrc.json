{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {},
    "overrides": [
        {
            "files": [
                "public/js/webLib.js"
            ],
            "rules": {
                "no-unused-vars": "off",
                "no-undef": "off"
            }
        },
        {
            "files": [
                "test/*Test.js"
            ],
            "rules": {
                "no-magic-numbers": "off"
            }
        }
    ]
}